<?php 
$link = $this->serverUrl($this->url('zfcuser/check-token', array('token' => $this->user->getToken())));
$linkFormat = '<a href="%s">%s</a>';
echo sprintf(
	$this->translate('Hello %s,<br><br>thanks for registering on our website. Please click the link below to activate your account:<br><br>%s'),
	$this->user->getDisplayName(),
	sprintf($linkFormat, $link, $link)
);